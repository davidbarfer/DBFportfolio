---
import Analytics from '@vercel/analytics/astro'
import Footer from "@/sections/Footer.astro"
import '@fontsource-variable/roboto';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="David Barrero's portfolio website" />
		<meta name="keywords" content="portfolio, david barrero, david barrero portfolio, david barrero website, david barrero personal website, portfolio website, personal website, personal portfolio website" />
		<title>David Barrero Portfolio</title>
		<Analytics />
	</head>
	<body>
			<slot />
			<Footer />
	</body>
</html>

<style is:global>
	:root {
		--color-primary: #002B5C;
		--color-secondary: #1B3A73;
		--color-accent: #00AEEF;
	}
	*,**::after,**::before {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html,
	body {
		margin: 0;
		background-color: var(--color-primary);
		color: var(--color-accent);
		min-height: 100vh;
		font-family: 'Roboto Variable', sans-serif;
	}

	main {
		position: relative;
	}

	p {
    font-size: 1rem;
  }

	h1 {
    font-size: 2rem;
	}
	h2 {
    font-size: 1.25rem;
	}
</style>
